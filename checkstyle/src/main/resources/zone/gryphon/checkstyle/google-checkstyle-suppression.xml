<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN" "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<!-- Checkstyle Suppression rules to enable Google's Checkstyle configuration to be used for Gryphon Zone projects -->
<!-- https://checkstyle.org/config_filters.html#SuppressionFilter -->
<!-- https://checkstyle.org/google_style.html -->
<!-- https://github.com/checkstyle/checkstyle/blob/master/src/main/resources/google_checks.xml -->
<suppressions>

    <!--  Google's style guide uses 2 spaces for indentation, Gryphon Zone uses 4 -->
    <suppress checks="Indentation"/>

    <!-- Google's style guide limits lines to 100 characters, Gryphon Zone does not -->
    <suppress checks="LineLength"/>

</suppressions>
